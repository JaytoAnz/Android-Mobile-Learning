<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="6dp"
    card_view:cardElevation="3dp"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:id="@+id/txt_judul"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/input_login"
            android:textStyle="bold"/>

        <ImageView
            android:layout_marginTop="10dp"
            android:layout_below="@+id/txt_judul"
            android:id="@+id/txt_video"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_logo_academic_movement"
            android:textColor="@color/colorPrimary"
            android:textSize="11dp"
            android:clickable="true"
            android:focusable="true" />

        <TextView
            android:layout_marginTop="10dp"
            android:layout_below="@+id/txt_video"
            android:id="@+id/txt_judul2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/input_login"
            android:textStyle="bold"/>

        <ImageView
            android:layout_marginTop="10dp"
            android:layout_below="@id/txt_judul2"
            android:id="@+id/txt_video2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_logo_academic_movement"
            android:textColor="@color/colorPrimary"
            android:textSize="11dp"
            android:clickable="true"
            android:focusable="true" />

        <TextView
            android:layout_marginTop="5dp"
            android:layout_below="@+id/txt_video2"
            android:id="@+id/txtlinkkuis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="8dp"
            android:visibility="invisible"/>

        <TextView
            android:layout_below="@id/txtlinkkuis"
            android:id="@+id/Nilai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="8dp"
            android:visibility="invisible"/>

        <View
            android:id="@+id/viewww"
            android:layout_below="@+id/Nilai"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorGray" />

        <LinearLayout
            android:layout_below="@+id/viewww"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <ImageView
                android:id="@+id/btn_hapus"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/hapus_learn"
                android:layout_marginRight="10dp"
                android:clickable="true"
                android:tint="@color/colorPrimary"/>

            <ImageView
                android:id="@+id/btn_edit"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/edit_learn"
                android:clickable="true"
                android:tint="@color/colorPinkRose"/>

            <ImageView
                android:id="@+id/btn_tmbahNilai"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginRight="10dp"
                card_view:srcCompat="@drawable/ic_note_add_black_24dp"
                android:clickable="true"
                android:tint="@color/colorBitterSweetDark"/>

            <TextView
                android:id="@+id/txtNilai"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="VIEW NILAI"
                android:layout_gravity="center"
                android:textColor="@color/colorColorFlower"
                android:textColorHint="@color/input_login"
                android:textStyle="bold"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/txtdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="tanggal"
                android:gravity="right"
                android:textColor="@color/input_login"
                android:textColorHint="@color/input_login"
                android:textSize="10dp" />

        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>