<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/htoolbar"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/colorPrimary"
        android:gravity="center|left">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textColor="@color/colorWhite"
        android:layout_marginLeft="10dp"
        android:textSize="20dp"/>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/containerHeader"
        android:layout_marginTop="15dp"
        android:layout_below="@id/htoolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/greeting"
            android:layout_centerHorizontal="true"
            android:text="Hi, "
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/deksrip1"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/greeting"
            android:text="Selamat datang di aplikasi"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/deksrip1"
            android:text="SEGER"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="80dp">

        <ImageView
            android:id="@+id/imageLogo"
            android:src="@drawable/ic_logo_academic_movement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textColor="@color/black"
            android:layout_centerHorizontal="true"
            android:layout_above="@+id/deksrip3"
            android:textSize="15dp"
            android:text="Untuk memulai pembelajaran,"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:textColor="@color/black"
            android:id="@+id/deksrip3"
            android:textSize="15dp"
            android:layout_centerHorizontal="true"
            android:layout_alignBottom="@+id/imageLogo"
            android:text="silahkan pilih menu learning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

</RelativeLayout>